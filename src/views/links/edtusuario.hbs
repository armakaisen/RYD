<div class="container-p4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/edtusuario/{{usuario.ID_USUARIO}}" method="POST">
                        <div class="form-group">
                            <input type="text" value = "{{usuario.NOMBRE}}" class="form-control" name="fullname" placeholder="Nombre">
                        </div>
                        <div class="form-group">
                            <input type="text" value = "{{usuario.LOGIN}}" class="form-control" name="username" placeholder="login">
                        </div>
                        
                        <div class="form-group">
                            <input type="password" value = "{{usuario.CLAVE}}" class="form-control" name="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <table class="table table-striped table-responsive"> 
        <thead class="thead-dark">
            <th>Cod.</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Comprobante</th>
            <th>Total Bruto</th>
            <th>Descuento</th>
            <th>% Dto.</th>
            <th>Pendiente</th>
            <th>Saldo</th>
        </thead>
        <tbody>

            {{#each links}}
               
                <tr>
                
                    <td>
                        {{cod_cliente}}
                        
                    </td>
                    
                    <td>
                        {{ nombre }}
                    </td>
                    <td>
                        <!--<p class="m-2">{{ fecha }}</p> -->
                        <p>{{formatDate fecha day="numeric" month="numeric" year="numeric"}}</p> 
                       
                    </td>
                    <td>
                        {{ comprobante }}
                    </td>
                    <td>
                        {{ total }}
                    </td>
                    <td>
                       {{ total_descuento }} 
                    </td>
                    <td>
                        {{ porc_descuento }}
                    </td>
                    <td>
                        {{ pendiente }}
                    </td>
                    <td>
                        <span class="float-right">
                        {{ saldo }}
                        </span>
                    </td>
                     
                </tr>
           {{/each}}
      </tbody>
    </table>
     

</div>
 
<div>
     
    {{#each lnsaldo}}
        <div class="container">
                    <div class="row" >
                        <div class="col bg-dark"></div>         
                        <div class="col-md-auto bg-dark text-white">
                            <h3>Total General:</h3> 
                        </div>

                        <div class="col col-lg-2 bg-dark text-white">
                            <h3> {{saldo}}</h3>
                           
                        </div>

                    </div>
        </div>
             
    {{/each}}
 

</div>
            